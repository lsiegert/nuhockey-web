<% @games.each do |game| %>
  <tr>
    <td><%= game._id %></td>
    <td><%= game.date %></td>
    <td><%= game.season %></td>
    <td><%= game.opponent %></td>
    <td><%= game.nuscore %></td>
    <td><%= game.oppscore %></td>
    <td><%= game.location %></td>
    <td><%= game.deleted %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <!-- <td><%= link_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete %></td> -->
  </tr>
<% end %>
</table>

